#client.focused          $green $green $darkgray $purple $darkgray
#client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
#client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
#client.urgent           $red $red $white $red $red

# Colored window borders
default_border pixel 3

# Change the color of the borders
#               mavi    mavi    beyaz   açık     mavi
#client.focused #117d8d #117d8d #ffffff #00bcd4 #117d8d

# Bind for lockscreen
bindsym $mod+x exec swaylock -i ~/Pictures/3840x2160-dark-linux-blur.png

# Set i3status font
font pango:JetBrainsMono Nerd Font Medium 10

# Set input language
input type:keyboard {
	xkb_layout tr(alt)
}
input type:keyboard xkb_model "pc86"

# Bind the laptop context menu to start thunar
bindcode 135 exec thunar

#bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master +5%
#bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master -5%
#bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle

# Volume control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Screenshots, requires wl-clipboard and jq
bindsym $mod+Print exec grim -g "$(slurp -d)" - | wl-copy
bindsym Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name')

# use wofi instead of dmenu, requires wofi
set $menu wofi --show=drun --insensitive --width=25% --fork --no-actions

# Set cursor theme, requires capitaine-cursors
seat seat0 xcursor_theme "capitaine-cursors"
exec_always gsettings set org.gnome.desktop.interface cursor-theme "capitaine-cursors"


# Resizing containers:
mode "resize" {
	bindsym $left resize grow width 20px
	bindsym $down resize shrink height 20px
	bindsym $up resize grow height 20px
	bindsym $right resize shrink width 20px

	# Same, with arrow keys
	bindsym Left resize grow width 20px
	bindsym Down resize shrink height 20px
	bindsym Up resize grow height 20px
	bindsym Right resize shrink width 20px

	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Add outer gaps
gaps outer 10
