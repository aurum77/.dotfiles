### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod1

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Set border size
set $bordersize 3

# Set xfce4-terminal as default
set $term xfce4-terminal

# Start a terminal
bindsym $mod+Return exec $term

# Start a floating terminal
bindsym $mod+Ctrl+Return exec $term --title=floating_terminal

# Move floating windows using alt and left click,
# resize them with right click
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left 25px
    bindsym $mod+Shift+$down move down 25px
    bindsym $mod+Shift+$up move up 25px
    bindsym $mod+Shift+$right move right 25px

#
# Workspaces:
#
    # Set workspaces with names
    set $ws1 "1:www"
    set $ws2 "2:devl"
    set $ws3 "3:docs"
    set $ws4 "4:term"
    set $ws5 "5:file"
    set $ws6 "6:virt"
    set $ws7 "7:chat"
    set $ws8 "8:music"
    set $ws9 "9:video"

    # Switch to workspace
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace $ws4
    bindsym $mod+5 workspace $ws5
    bindsym $mod+6 workspace $ws6
    bindsym $mod+7 workspace $ws7
    bindsym $mod+8 workspace $ws8
    bindsym $mod+9 workspace $ws9

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $ws1
    bindsym $mod+Shift+2 move container to workspace $ws2
    bindsym $mod+Shift+3 move container to workspace $ws3
    bindsym $mod+Shift+4 move container to workspace $ws4
    bindsym $mod+Shift+5 move container to workspace $ws5
    bindsym $mod+Shift+6 move container to workspace $ws6
    bindsym $mod+Shift+7 move container to workspace $ws7
    bindsym $mod+Shift+8 move container to workspace $ws8
    bindsym $mod+Shift+9 move container to workspace $ws9

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent



include /etc/sway/config.d/*

# My configurations
# -----------------

# Window rule
for_window [title=".*"] border pixel $bordersize

for_window [title=floating_terminal|UltimMC|cpupower-gui] floating enable
for_window [title="^File Operation Progress$"] floating enable
for_window [class="(jetbrains|java-util)-(.*)" title="win0"] floating enable

for_window [window_role="^pop-up$"] floating enable

for_window [app_id=Thunar|thunar|mpv|gnome-pomodoro] floating enable
for_window [app_id=pavucontrol] floating enable, resize set width 800

for_window [title="on QEMU/KVM$"] floating enable

# Workspace rules
# devl
assign [class="Code"] workspace $ws2

# docs
assign [app_id="org.pwmt.zathura"] workspace $ws3

# virt
assign [app_id="virt-manager"] workspace $ws6

# chat
assign [class="discord"] workspace $ws7
assign [app_id="telegramdesktop"] workspace $ws7

# Use wofi as app launcher
set $menu wofi --show=drun --insensitive --allow-images --width=25% --lines=12 --no-actions --hide-scroll --prompt="Search for Applications"
bindsym $mod+d exec $menu

# Use wofi for scripts
bindsym $mod+Period exec $HOME/.dotfiles/stowable/wofi/.config/wofi/scripts/wofi-emoji.sh
bindsym $mod+Shift+q exec $HOME/.dotfiles/stowable/wofi/.config/wofi/scripts/wofi-power.sh
bindsym $mod+Shift+s exec $HOME/.dotfiles/stowable/wofi/.config/wofi/scripts/wofi-capture.sh

# Use wofi for file search
bindsym $mod+Shift+f exec find $HOME -not -path '*/.*' | sed 's/\/home\/borab/~/g' | wofi --show=dmenu --insensitive --no-actions --hide-scroll --cache-file=/dev/null --prompt="Search for Files" | sed 's/~/\/home\/borab/g; s/\ /\\ /g' | xargs -I{dir_or_file} exo-open \"{dir_or_file}\"

# Kill focused window
bindsym $mod+q kill

# Set gruvbox colorscheme colors
set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $white #fbf1c7

# Set wallpaper
output * bg $HOME/Pictures/wall.jpg fill

bar {
    # Set the position of the bar
    position bottom

    # When the status_command prints a new line to stdout,i3status updates.
    #status_command LANG=tr_TR.UTF-8 i3status -c $HOME/.config/i3status/i3status.conf
    status_command $HOME/.config/i3status/i3status

    # Hide workspace numbers
    strip_workspace_numbers no

    # Set some colors
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $yellow
        # workspaces section
        #                    border  backgr. text
        focused_workspace    $aqua $aqua $darkgray
        inactive_workspace   $bg $bg $yellow
        active_workspace     $darkgray $darkgray $yellow
        urgent_workspace     $red $red $bg
    }
}

# Blue gruvbox
# class                 border|backgr|text|indicator|child_border
client.focused          $blue $blue $darkgray $yellow $blue
client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
client.urgent           $red $red $white $red $red

# Colored window borders
default_border pixel $bordersize
smart_borders no_gaps

# Set i3status font
font pango:JetBrains Mono 10

# Set input language
input type:keyboard {
    xkb_layout tr(alt)
}
input type:keyboard xkb_model "pc101"

# Enable tap to click and natural scroll
input type:touchpad {
    tap enabled
    natural_scroll enabled
    drag_lock enabled
}

# Disable mouse accel
input type:pointer {
    accel_profile flat
    pointer_accel 0
}

# Bind the laptop context menu to start thunar
bindcode 135 exec thunar

# Volume and media control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshots, requires wl-clipboard and jq
bindsym Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name')

# Set themes (not all gtk applications abide by this, so we use xsettingsd as well)
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'gruvbox-dark-gtk'
    gsettings set $gnome-schema icon-theme 'gruvbox-dark-icons-gtk'
    gsettings set $gnome-schema cursor-theme 'capitaine-cursors'
}

# Set seat cursor theme
seat seat0 xcursor_theme "capitaine-cursors"

# Reload xwindow themes with sway reload
exec_always xsettingsd

# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 25px
    bindsym $down resize shrink height 25px
    bindsym $up resize grow height 25px
    bindsym $right resize grow width 25px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Scratchpad binds
bindsym $mod+Shift+tab move scratchpad
bindsym $mod+tab scratchpad show

# Fast workspace switch binds
bindsym $mod+x workspace next_on_output
bindsym $mod+z workspace prev_on_output

# Brightness control using brightnessctl
bindsym XF86MonBrightnessUp exec brightnessctl set +10
bindsym XF86MonBrightnessDown exec brightnessctl set 10-

# CPU Governor control using cpupower-gui
bindsym $mod+Ctrl+b exec cpupower-gui pr Balanced
bindsym $mod+Ctrl+p exec cpupower-gui pr Performance

# Lock on lid close
set $lock 'swaylock -i $HOME/Pictures/lock.jpg'
bindswitch --reload --locked lid:on exec $lock

# Night light
exec gammastep -v -l 41:28 -t 6500:4000 2> /tmp/gammastep.log

# Start keyring daemon
exec eval $(gnome-keyring-daemon --start)

# Enable gaps
gaps outer 4
gaps inner 2
smart_gaps on
