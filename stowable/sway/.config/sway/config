### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod1

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Set border size
set $bordersize 3

# Set xfce4-terminal as default
set $term /bin/xfce4-terminal

# Start a terminal
bindsym $mod+Return exec $term

# Start a floating terminal
bindsym $mod+Ctrl+Return exec $term --title=floater

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

#
# Workspaces:
#
    # Set workspaces with names
    set $ws1 "1:www"
    set $ws2 "2:devl"
    set $ws3 "3:term"
    set $ws4 "4:file"
    set $ws5 "5:docs"
    set $ws6 "6:virt"
    set $ws7 "7:chat"
    set $ws8 "8:music"
    set $ws9 "9:video"

    # Switch to workspace
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace $ws4
    bindsym $mod+5 workspace $ws5
    bindsym $mod+6 workspace $ws6
    bindsym $mod+7 workspace $ws7
    bindsym $mod+8 workspace $ws8
    bindsym $mod+9 workspace $ws9

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $ws1
    bindsym $mod+Shift+2 move container to workspace $ws2
    bindsym $mod+Shift+3 move container to workspace $ws3
    bindsym $mod+Shift+4 move container to workspace $ws4
    bindsym $mod+Shift+5 move container to workspace $ws5
    bindsym $mod+Shift+6 move container to workspace $ws6
    bindsym $mod+Shift+7 move container to workspace $ws7
    bindsym $mod+Shift+8 move container to workspace $ws8
    bindsym $mod+Shift+9 move container to workspace $ws9

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent



include /etc/sway/config.d/*

# My configurations
# -----------------

# Window rules
# Enable floating for UltiMC
for_window [title="^UltimMC$"] floating enable, resize set 30 ppt 60 ppt, border pixel $bordersize

# Enable floating for cpupower-gui
for_window [title="^cpupower-gui$"] floating enable, border pixel $bordersize

# Enable floating for thunar progress bars 
for_window [title="^File Operation Progress$"] floating enable, border pixel $bordersize

# Enable floating for floating terminal with custom window name
for_window [title="^floater$"] floating enable, border pixel $bordersize

for_window [app_id="^pavucontrol$"] floating enable, resize set 30 ppt 30 ppt, border pixel $bordersize

# Enable floating for windows with the pop-up role such as sign in pop-ups
for_window [window_role="^pop-up$"] floating enable, border pixel $bordersize

# Use wofi, requires wofi
set $menu wofi --show=drun --insensitive --allow-images --width=25% --fork --no-actions --hide-scroll --prompt="Search for Applications"
bindsym $mod+d exec $menu

# Use wofi for emoji
bindsym $mod+Period exec $HOME/.dotfiles/stowable/wofi/.config/wofi/scripts/wofi-emoji.sh

# Kill focused window
bindsym $mod+q kill

# Set wallpaper
output * bg ~/Pictures/wall.jpg fill

## Base16 OneDark
# Author: Lalit Magant (http://github.com/tilal6991)

set $base00 #282c34
set $base01 #353b45
set $base02 #3e4451
set $base03 #545862
set $base04 #565c64
set $base05 #abb2bf
set $base06 #b6bdca
set $base07 #c8ccd4
set $base08 #e06c75
set $base09 #d19a66
set $base0A #e5c07b
set $base0B #98c379
set $base0C #56b6c2
set $base0D #61afef
set $base0E #c678dd
set $base0F #be5046

bar {
    # Set the position of the bar
    position bottom

    # When the status_command prints a new line to stdout,i3status updates.
    status_command i3status -c ~/.config/i3status/i3status.conf

    # Hide workspace numbers
    strip_workspace_numbers yes
    # Set One Dark colors
    colors {
        # State             Border  BG      Text
        background $base00
        separator  $base01
        statusline $base0D
        focused_workspace   $base05 $base0D $base00
        active_workspace    $base05 $base03 $base00
        inactive_workspace  $base03 $base01 $base05
        urgent_workspace    $base08 $base08 $base00
        binding_mode        $base00 $base0A $base00
    }
}

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base0B $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

# Colored window borders
default_border pixel $bordersize
smart_borders no_gaps

# Set i3status font
font pango:IBM Plex Mono Medium 10

# Set input language
input type:keyboard {
    xkb_layout tr(alt)
}
input type:keyboard xkb_model "pc101"

# Enable tap to click and natural scroll
input type:touchpad {
    tap enabled
    natural_scroll enabled
    drag_lock enabled
}

# Disable mouse accel
input type:pointer {
    accel_profile flat
    pointer_accel 0
}

# Bind the laptop context menu to start thunar
bindcode 135 exec thunar

# Volume and media control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshots, requires wl-clipboard and jq
bindsym $mod+Shift+s exec grim -g "$(slurp -d)" - | wl-copy
bindsym Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name')

# Recording bind
bindsym $mod+Shift+r exec sh ~/.config/sway/scripts/screen-recorder.sh

# Set themes (not all gtk applications abide by this, so we use xsettingsd as well)
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Arc-Dark-solid'
    gsettings set $gnome-schema icon-theme 'Papirus-Dark'
    gsettings set $gnome-schema cursor-theme 'capitaine-cursors'
}

# Set seat cursor theme
seat seat0 xcursor_theme "capitaine-cursors"


# Reload xwindow themes with sway reload
exec_always xsettingsd

# Resizing containers:
mode "resize" {
    bindsym $left resize grow width 20px
    bindsym $down resize shrink height 20px
    bindsym $up resize grow height 20px
    bindsym $right resize shrink width 20px

    # Same, with arrow keys
    bindsym Left resize grow width 20px
    bindsym Down resize shrink height 20px
    bindsym Up resize grow height 20px
    bindsym Right resize shrink width 20px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Scratchpad binds
#bindsym $mod+Shift+tab move scratchpad
#bindsym $mod+tab scratchpad show

# Fast workspace switch binds
bindsym $mod+x workspace next_on_output
bindsym $mod+z workspace prev_on_output


# Brightness control using brightnessctl
bindsym XF86MonBrightnessUp exec brightnessctl set +10
bindsym XF86MonBrightnessDown exec brightnessctl set 10-

# Lock on lid close
set $lock 'swaylock -i ~/Pictures/lock.jpg'
bindswitch --reload --locked lid:on exec $lock

# Night light
exec wlsunset -l 41 -L 28

# Start keyring
exec eval $(gnome-keyring-daemon --start)
exec export SSH_AUTH_SOCK

# Enable gaps
gaps outer 8
gaps inner 4
smart_gaps on
